<div class="table-responsive" style="margin-top: 20px;">
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th><%= t'.idFamilia' %></th>
        <th><%= t'.FamClave' %></th>
        <th><%= t'.FamDescripcion' %></th>
      </tr>
    </thead>

    <tbody>
      <% @familia.each do |familium| %>


        <% @model = familium %> 

        <tr>
          <%if can? :show, Familium %>
            <td><%=link_to familium.idFamilia, familium, :class => "btn btn-xs btn-primary" %></td>
          <%else%>
            <td><%= label familium.idFamilia, familium.idFamilia, :class => "btn btn-xs btn-default", :disabled => true%></td>
          <%end%>
          <td><%= familium.FamClave %></td>
          <td><%= familium.FamDescripcion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>