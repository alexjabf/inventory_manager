<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div>
    <%= f.label :login %><br />
    <%= f.text_field :login, :autofocus => true, :required => true, :minlength => 6, :maxlength => 60, :size => 40, :placeholder => t('layouts.application.required'), :title => t('layouts.devise.enter_login') %>
  </div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, :required => true, :minlength => 8, :maxlength => 20, :size => 40, :placeholder => t('layouts.application.required'), :title => t('layouts.devise.enter_password') %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div>
      <%= f.label :remember_me %><%= f.check_box :remember_me %> 
    </div><br />
  <% end -%>

  <div><%= f.submit t(:login), data: {disable_with: t("actions.loging_in")}, :title => t(:login), :class => "btn btn-sm btn-primary"  %></div>

<% end %>

<%= render "devise/shared/links" %>
