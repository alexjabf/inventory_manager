<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>


  <div><%= f.label :new_password, t('devise.passwords.new') %><br />
    <%= f.password_field :password, :autocomplete=>"off" , :autofocus => true, :required => true, :minlength => 8, :maxlength => 20, :size => 40, :placeholder => t('layouts.application.required'), :title => t('layouts.devise.enter_new_password') %>
  </div><br />
  
  <div>
    <%= f.label :new_password_confirmation, t('devise.passwords.confirm') %><br />
    <%= f.password_field :password, :autocomplete=>"off" , :autofocus => false, :required => true, :minlength => 8, :maxlength => 20, :size => 40, :placeholder => t('layouts.application.required'), :title => t('layouts.devise.enter_new_password_confirmation') %>
  </div><br />
  
  <div><%= f.submit t('devise.passwords.change_my'), data: {disable_with: t("actions.changing_password")}, :title => t('devise.passwords.change_my'), :class => "btn btn-sm btn-primary" %></div>

<% end %>

<%= render "devise/shared/links" %>
