<div class="row">
  <div class="col-lg-12">
    <ul class="list-group">
      <li class="list-group-item active"><%= @user.full_name %></li>
      <% unless @user.id.blank? %>
        <li class="list-group-item ">
          <b><%= t'.id' %></b> <%= @user.id %>
        </li>
      <% end %>
      <% unless @user.first_name.blank? %>
        <li class="list-group-item ">
          <b><%= t'.first_name' %></b> <%= @user.first_name %>
        </li>
      <% end %>
      <% unless @user.last_name.blank? %>
        <li class="list-group-item ">
          <b><%= t'.last_name' %></b> <%= @user.last_name %>
        </li>
      <% end %>
      <% unless @user.role.blank? %>
        <li class="list-group-item ">
          <b><%= t'.role_id' %></b> <%= link_to_if((can? :show, Role), @user.role.select_display, @user.role, :title => t("actions.show",  model: t("record.models.role"))) %>
        </li>
      <% end %>
      <% unless @user..blank? %>
        <li class="list-group-item ">
          <b><%= t'.' %></b> <%= t(@user..to_s) %>
        </li>
      <% end %>
      <% unless @user.created_at.blank? %>
        <li class="list-group-item ">
          <b><%= t'.created_at' %></b> <%= I18n.l @user.created_at, :format => :long %>
        </li>
      <% end %>
      <% unless @user.updated_at.blank? %>
        <li class="list-group-item ">
          <b><%= t'.updated_at' %></b> <%= I18n.l @user.updated_at, :format => :long %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
