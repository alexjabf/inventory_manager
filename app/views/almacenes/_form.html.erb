<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%=t("actions.new",  model: t("activerecord.models.#{controller_name.singularize}"))%></h3>
  </div>
  <div class="panel-body"> 
<%= form_for(@almacene) do |f| %>
<%= render "partials/form_errors" %>
<div class="left-custom-column">
          <div class="field" style="margin-top: 10px;">
      <%= f.label :IdAlmacen %><br>
<%= f.number_field :IdAlmacen, placeholder: t('layouts.application.required'), i18n_name: t('almacenes.index.IdAlmacen'), required: true, readonly: false, minlength: 1, maxlength: 10, style: 'width: 200px;', validation_type: 'number', :class => 'form-control', title: t('almacenes.index.IdAlmacen') %>
    </div>
          <div class="field" style="margin-top: 10px;">
      <%= f.label :Nombre %><br>
<%= f.text_field :Nombre, placeholder: t('layouts.application.required'), i18n_name: t('almacenes.index.Nombre'), required: true, readonly: false, minlength: 1, maxlength: 50, style: 'width: 200px;', validation_type: 'name', :class => 'form-control', title: t('almacenes.index.Nombre') %>
    </div>
  </div>
<div class="right-custom-column">
          <div class="field" style="margin-top: 10px;">
      <%= f.label :TipoAlmacen %><br>
<%= f.text_field :TipoAlmacen, placeholder: t('layouts.application.not_required'), i18n_name: t('almacenes.index.TipoAlmacen'), required: false, readonly: false, minlength: 1, maxlength: 50, style: 'width: 200px;', validation_type: 'name', :class => 'form-control', title: t('almacenes.index.TipoAlmacen') %>
    </div>
  </div>
<div class='full-width'>
  <!--HERE GOES NESTED FORM-->
</div>
<br>
<div class='actions'>
  <%= f.submit data: {disable_with: t("actions.#{action_name}ing",  model: t("activerecord.models.#{controller_name.singularize}").titlecase)}, :class => "btn btn-sm btn-primary", title: t("actions.#{action_name}ing",  model: t("activerecord.models.#{controller_name.singularize}").titlecase) %>  
</div>
<% end %>
  </div>
</div>