        <%= label_tag t('articulos.show.PiezasxCaja') %>
<%= number_field_tag :PiezasxCaja, params[:PiezasxCaja], placeholder: t('layouts.application.not_required'), i18n_name: t('articulos.index.PiezasxCaja'), style: 'width: 200px;', validation_type: 'number', :class => 'form-control', title: t('articulos.index.PiezasxCaja') %>
